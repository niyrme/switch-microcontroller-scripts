root = true

# Default
[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 3
tab_width = 3
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = off

# Markdown
[*.md]
indent_size = 2
indent_style = space

# YAML
[*.{yml,yaml}]
indent_size = 2
indent_style = space
